<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <fun.inaction.mediapicker.view.custom.SquareImageView
        android:id="@+id/SquareImageView"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fun.inaction.mediapicker.view.custom.CirclePicker
        android:id="@+id/circlePicker"
        android:layout_width="24dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        app:layout_constraintEnd_toEndOf="@+id/SquareImageView"
        app:layout_constraintTop_toTopOf="@+id/SquareImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>